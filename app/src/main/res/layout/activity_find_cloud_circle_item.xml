<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/circle_shape_cloud">

        <ImageView
            android:id="@+id/choice_room_diagonal"
            android:layout_width="150dp"
            android:layout_height="150dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_toLeftOf="@+id/cloud_circle_play_number"
            android:background="@drawable/play_white_16dp" />

        <TextView
            android:id="@+id/cloud_circle_play_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            android:text="94万"
            android:textColor="@color/white"
            android:textSize="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cloud_circle_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="封茗囧菌的云圈"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/cloud_circle_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="封茗囧菌的云圈"
                android:textColor="@color/black_707070"
                android:textSize="12dp" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>