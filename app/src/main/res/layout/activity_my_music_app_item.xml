<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="125dp"
        android:gravity="center">
        <ImageView
            android:id="@+id/diagonal"
            android:layout_width="100dp"
            android:layout_height="125dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/icon"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:background="@drawable/icon_love"/>
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_FFF0F0"
                android:text="我喜欢的音乐"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/type_color"
            android:layout_width="70dp"
            android:layout_marginLeft="15dp"
            android:layout_height="28dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/shape_translu"
            android:gravity="center">
            <ImageView
                android:id="@+id/type_icon"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_gravity="center"
                android:background="@drawable/play_whick_1"/>
            <TextView
                android:id="@+id/type"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:text="心动模式"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>