<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:id="@+id/plaza_lin">
    <RelativeLayout
        android:id="@+id/plaza_item_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_plaza">
        <ImageView
            android:id="@+id/diagonal_mlog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </ImageView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="80dp"
            android:minHeight="70dp"
            android:layout_marginBottom="5dp"
            android:background="@color/white"
            android:orientation="vertical">
            <TextView
                android:id="@+id/content_mlog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_515151"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="12dp"
                android:maxLines="2"
                android:text="覃雪倩"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/per_pic"
                        android:layout_width="18dp"
                        android:layout_height="18dp"/>
                    <TextView
                        android:id="@+id/username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/black_707070"
                        android:text="梦溪溪_g"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/like_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5996赞"
                        android:textSize="12dp"
                        android:textColor="@color/black_bf"
                        android:layout_gravity="center"/>
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:background="@drawable/to_many_bfbfbf"
                        android:layout_gravity="center"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>