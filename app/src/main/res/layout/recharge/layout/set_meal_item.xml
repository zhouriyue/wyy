<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/p_id">
    <LinearLayout
        android:id="@+id/box"
        android:layout_width="120dp"
        android:layout_height="145dp"
        android:background="@drawable/shape_unlinner_black"
        android:orientation="vertical"
        android:paddingBottom="30dp"
        android:layout_margin="10dp"
        android:gravity="center">
        <LinearLayout
            android:id="@+id/detail_lin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_circle_redfd5b57"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_gravity="left">
            <TextView
                android:id="@+id/detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textColor="@color/white"
                android:text="送喜马拉雅山月卡"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center">
            <TextView
                android:id="@+id/sm_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="14dp"
                android:textColor="@color/black_2c"
                android:text="连续包月"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center">
            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/icon_renminbi"/>
            <TextView
                android:id="@+id/current_prices"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/wyy_red"
                android:textStyle="bold"
                android:textSize="18dp"
                android:text="4.8"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <View  android:layout_height="1px"
                android:layout_width="100dp"
                android:background="@color/black_707070"
                android:layout_centerInParent="true"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:textColor="@color/black_707070"
                    android:text="原价"/>
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@drawable/icon_renminbi_bl70"/>
                <TextView
                    android:id="@+id/cost_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:textColor="@color/black_707070"
                    android:text="13"/>
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>