<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gxuwz.beethoven">
    <!-- 开启网络权限 -->
    <uses-permission android:name="android.permission.INTERNET" /> <!-- 开启读取本地网络权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/beethoven"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".page.index.myview.follow.FollowActivity"></activity>
        <activity android:name=".page.index.myview.collect.CollectActivity" />
        <activity android:name=".page.index.myview.radiostation.RadioStationActivity" />
        <activity android:name=".page.index.myview.download.DownLoadActivity" />
        <activity android:name=".page.index.playview.ActivityPlayView" />
        <activity
            android:name=".page.index.myview.localmusic.LocalMusicActivity"
            android:theme="@android:style/Theme.NoTitleBar" />
        <activity
            android:name=".page.index.myview.songlist.SongListActivity"
            android:theme="@android:style/Theme.NoTitleBar" />
        <activity
            android:name=".page.index.Index"
            android:theme="@android:style/Theme.NoTitleBar" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name=".service.MusicService" />
    </application>

</manifest>